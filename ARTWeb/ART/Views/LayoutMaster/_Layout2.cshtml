        <link href="~/Css/bootstrap-theme.css" rel="stylesheet" />
        <link href="http://netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" />
        <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Css/customstyle.css" rel="stylesheet" type="text/css" />
        <link href="~/Css/responsive-style.css" rel="stylesheet" type="text/css" />*@

    @Scripts.Render("~/bundles/scripts")
    @Styles.Render("~/bundles/artstyle")
    @Styles.Render("~/bundles/font")
    @Styles.Render("~/bundles/goofonts")

    @*<script src="~/Scripts/jquery.min.js"></script>
        <script src="~/Scripts/ART%20Script/corerest.js"></script>

        <script src="~/Scripts/ART%20Script/bootstrap.js"></script>
        <script src="~/Scripts/ART%20Script/custom.js"></script>
        <script src="~/Scripts/ART%20Script/layout.js"></script>*@
    <style>
        /*.logout {
            margin-top: 30px;
            padding-left: 15px;
            text-decoration: none;
            color: #fff;
            border-left: 1px solid #fff;
        }*/

        .logout-wo-border {
            margin-top: 30px;
            padding-left: 15px;
            text-decoration: none;
            color: #fff;
        }

        /*.logout:hover, .logout-wo-border:hover {
            color: #fff;
        }*/

        #localize {
            margin-right: 15px;
        }
    </style>
    <script>
        $(document).ready(function () {
            $(function () {
                $(this).bind("contextmenu", function (e) {
                    e.preventDefault();
                });
            });
            $(document).keydown(function (event) {
                if (event.keyCode == 123) {
                    return false;
                }
                else if (event.ctrlKey && event.shiftKey && event.keyCode == 73) {
                    return false;  //Prevent from ctrl+shift+i
                }

                var pressedKey = String.fromCharCode(event.keyCode).toLowerCase();
                if (event.ctrlKey && pressedKey == "u") {
                    return false;
                }
            });

            $('#localize').on('change', function () {
                document.forms["lay-resource-form"].submit();
            });

            window.history.forward();
            function noBack() { window.history.forward(); }
        });
    </script>
</head>

<body class="bg-white" onload="noBack();" onpageshow="if (event.persisted) noBack();" onunload="">
    <!-- wrapper section starts-->
    <div class="wrapper">
        <!-- header section  start-->
        <header class="header-blue">
            <div class="main-container">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 Padding-Nil">
                    <a href="../" class="logo" title="ART"></a>
                </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 Padding-Nil">
                <form action="/Home/LogOut" method="post" id="lay-logout">
                    <ul class="top-menu">
                        @if (ArtHandler.Model.Singleton.Instance.ClientSessionID.Is_Multilingual_Enabled == "Y")
                        {
                            <a href="#" class="pull-right logout">@Art.Logout</a>
                        }
                        else
                        {
                            @*<a href="#" class="pull-right logout-wo-border">@Art.Logout</a>*@
                            <li><a href="javascript:void(0);" class="logout" title="Logout"><img src="../Images/ArtImages/log-out.png"></a></li>
                        }
                    </ul>
                </form>
                @if (ArtHandler.Model.Singleton.Instance.ClientSessionID.Is_Multilingual_Enabled == "Y")
                {
                    <form action="/Resource/Create" method="post" id="lay-resource-form">
                        <select id="localize" name="localize"></select>
                    </form>
                    <img src="~/Images/ArtImages/language-globe-18x18.svg" alt="globe-icon" class="pull-right">
                }

            </div>

        </header>
        <!-- header section  end-->
        <!-- container section  start-->
        <div class="content-container">
            @RenderBody()
        </div>
        <!-- container section  end-->
    </div>
    <!-- wrapper section ends-->
    <!-- footer section starts-->
    <footer>
        <p>@Art.ArtCopyRights</p>
    </footer>
    <!-- footer section ends-->
    <script>
        $(document).ready(function () {
            $('.logout').on('click', function () {
                fnLogOut();
            })
            $('.logout-wo-border').on('click', function () {
                fnLogOut();
            })
        });
        function fnLogOut() {
            $("#lay-logout").submit();
        }
    </script>

</body>

</html>
